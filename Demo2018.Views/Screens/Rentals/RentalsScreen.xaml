<?xml version="1.0" encoding="UTF-8"?>
<base:BaseScreen
    xmlns:base="clr-namespace:Demo2018.Views.Screens"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Demo2018.Views.Screens.Rentals.RentalsScreen">
    <StackLayout
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand">
        <Label
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center"
            Text="{Binding GoogleUser.Name}"
            FontSize="Large" />
        <Image
            Source="{Binding GoogleUser.Picture}" />
        <Button Text="Login Google" Command="{Binding GoogleLoginCommand}"/>
        <Button Text="Logout Google" Command="{Binding GoogleLogoutCommand}"/>
    </StackLayout>
</base:BaseScreen>